	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'fudgec'",
			"cargo": {
				"args": [
					"build",
					"--bin=fudgec",
					"--package=fudgelang-cli"
				],
				"filter": {
					"name": "fudgec",
					"kind": "bin"
				}
			},
			"args": ["tests/testsource.fu", "-m", "tests/moduletest.fum"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/vscodeext"
			]
		}
	]
}